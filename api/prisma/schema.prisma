// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider             = "mysql"
  url                  = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

model Client {
  id             Int           @id @default(autoincrement())
  auth0Id        String        @unique
  email          String
  name           String
  address        String?
  phone          String?
  occupation     String?
  reasonForAdopt String?
  applications   Application[]
  favorites      Favorite[]
  adoptedPuppies Puppy[]       @relation("AdoptedPuppies")
}

model Puppy {
  id           Int           @id @default(autoincrement())
  name         String
  breed        String
  image        String
  age          Int
  description  String
  applications Application[]
  favorites    Favorite[]
  adopted      Boolean       @default(false)
  dateAdopted  DateTime?
  adopter      Client?       @relation(fields: [clientId], references: [id], name: "AdoptedPuppies")
  clientId     Int?
}

model Application {
  id       Int    @id @default(autoincrement())
  status   String
  clientId Int
  puppyId  Int
  client   Client @relation(fields: [clientId], references: [id])
  puppy    Puppy  @relation(fields: [puppyId], references: [id])
}

model Favorite {
  clientId Int
  puppyId  Int
  client   Client @relation(fields: [clientId], references: [id])
  puppy    Puppy  @relation(fields: [puppyId], references: [id])

  @@id([clientId, puppyId])
}
